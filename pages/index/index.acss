/** 侧边栏 **/
.chiller-theme .sidebar-wrapper {
    background: #1d1d1d;
}

.sidebar-wrapper {
    width: 40%;
    height: 100%;
    max-height: 100%;
    position: fixed;
    top: 0;
    right: 0px;
    transition: all .3s ease;
}

.sidebar-wrapper .sidebar-brand {
    padding: 15px 20px;
    margin-top:60px;
}

.fa {
    display: inline-block;
    font-size: inherit;
    text-rendering: auto;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
.btn {
    display: inline-block;
    padding: 6px 12px;
    margin-bottom: 0;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.42857143;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    -ms-touch-action: manipulation;
    touch-action: manipulation;
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-image: none;
    border: 1px solid transparent;
    border-radius: 4px;
}

.btn-box-tool {
    padding: 5px;
    font-size: 15px;
    background: transparent;
    color: #97a0b3;
    color: #f39c12;
}

.page-wrapper.toggled #toggle-sidebar {
    position: absolute;
    right: 20px;
    top: 25px;
    cursor: pointer;
    display: inline-block;
    width: auto;
    margin: 0 auto;
}

#toggle-sidebar view {
    display: block;
    height: 3px;
    width: 13px;
    background-color: #333333;
    margin: 3px auto;
    border-radius: 4px;
}

.page-wrapper.toggled #toggle-sidebar view {
    background: #bdbdbd;
    opacity: 0;
}

.page-wrapper.toggled #toggle-sidebar view:first-of-type {
    -webkit-transform: translateY(6px) rotateZ(45deg);
    -moz-transform: translateY(6px) rotateZ(45deg);
    -ms-transform: translateY(6px) rotateZ(45deg);
    -o-transform: translateY(6px) rotateZ(45deg);
    transform: translateY(6px) rotateZ(45deg);
    opacity: 1;
}

.page-wrapper.toggled #toggle-sidebar view:last-of-type {
    -webkit-transform: translateY(-6px) rotateZ(-45deg);
    -moz-transform: translateY(-6px) rotateZ(-45deg);
    -ms-transform: translateY(-6px) rotateZ(-45deg);
    -o-transform: translateY(-6px) rotateZ(-45deg);
    transform: translateY(-6px) rotateZ(-45deg);
    opacity: 1;
}

.page-wrapper.chiller-theme.toggled #toggle-sidebar view {
    background: #bdbdbd;
}

.sidebar-wrapper .sidebar-menu {
    padding-bottom: 10px;
}

.sidebar-wrapper ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

.sidebar-wrapper .sidebar-menu .header-menu >view {
    font-weight: bold;
    font-size: 14px;
    padding: 15px 20px 5px 20px;
    display: inline-block;
}

.chiller-theme .sidebar-wrapper .sidebar-menu .header-menu view {
    color: #6c7b88;
}