.mask{
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 9999;
}

.modal-content{
  flex-direction: column;
  width: 90%;
  /* height: 80%; */
  position: fixed;
  top: 10%;
  left: 5%;
  background-color: #fff;
  border-radius: 10rpx;
}

.modal-btn-wrapper{
  display: flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-radius: 10rpx;
  border-top: 2rpx solid rgba(7,17,27,0.1);
}

.cancel-btn, .confirm-btn{
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}

.cancel-btn{
  border-right: 2rpx solid rgba(7,17,27,0.1);
}

.main-content{
  flex: 1;
  height: 100%;
  overflow-y: hidden; 
}

.wrapper{
  width: 100%;                      /** 指定宽度 否则在真机上只会默认显示屏幕30%左右的宽度 */
  margin: 1rem 0.5rem 0.5rem 0.5rem;
}

/** 表格样式 **/
.table {
  border: 0px solid darkgray;
  margin-top:15rpx;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 1rem;
  align-items: center;
}
.th {
  width: 40%;
  justify-content: center;
  display: flex;
  align-items: center;
  font-weight: bold;
}
.td {
  width:40%;
  justify-content: center;
  text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.bg-x{
  background: rgb(248, 253, 255);
}

.btn{
	display:inline-block;
	padding:6px 12px;
	margin-bottom:0;
	font-size:14px;
	font-weight:400;
	line-height:1.42857143;
	text-align:center;
	white-space:nowrap;
	vertical-align:middle;
	touch-action:manipulation;
	cursor:pointer;
	user-select:none;
	background-image:none;
	border:1px solid transparent;
	border-radius:4px;

  border-radius: 3px;
  box-shadow: none;
  border: 1px solid transparent;
}

.btn-primary{
  color:#fff;
  background-color: #3c8dbc;
  border-color: #367fa9;
}

/** 添加服务器 **/
.clearfix {
    *zoom: 1;
    clear: both;
}

.modal-header{
  padding: 15px;
  border-bottom: 1px solid #e5e5e5;
  border-bottom-color: #f4f4f4;
}
.close{
  float: right;
  font-size: 21px;
  font-weight: 700;
  line-height: 20px;
  height:20px;
  color: #000;
  background: #fff;
  text-shadow: 0 1px 0 #fff;
  filter: alpha(opacity=20);
  opacity: .2;
  border: none;
}
.form-group{
  margin-bottom:15px;
}

label{
  display:inline-block;
  max-width:100%;
  margin-bottom:5px;
  font-weight:700;
}

